<div>
  <h1>Lista de productos</h1>
  <div><a id="buttonCart" href="/cart">Ver Carrito</a></div>

  <div class="card-container">
    {{#each products}}
      <div class="card">
        <img src="{{this.image}}" alt="{{this.title}}">
        <div class="card-body">
          <h2 class="card-title">{{this.title}}</h2>
          <p class="card-description">{{this.description}}</p>
          <p class="card-price">${{this.price}}</p>
          <button id="buttonAgregar" onclick="addToCart('{{this._id}}', '{{this.title}}')">Agregar al Carrito</button>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="pagination">
    {{#each links}}
      <a href="{{this.link}}" class="page-link" >{{this.text}}</a>
    {{/each}}
  </div>
</div>

<div id="notification" class="notification hidden"></div>

<script src="/js/home.js"></script>
